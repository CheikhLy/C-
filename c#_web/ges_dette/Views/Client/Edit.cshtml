@model Cours.Models.Client

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier le Client</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">

    <div class="container mx-auto px-4 py-8">
        <h2 class="text-2xl font-bold text-center mb-6">Modifier le Client</h2>

        <div class="max-w-lg mx-auto bg-white shadow-md rounded-lg p-6">
            <form asp-action="Edit" class="space-y-4">
                <input type="hidden" asp-for="Id" />

                <!-- Surnom -->
                <div>
                    <label asp-for="Surnom" class="block text-sm font-medium text-gray-700">Surnom</label>
                    <input asp-for="Surnom" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" />
                    <span asp-validation-for="Surnom" class="text-red-500 text-sm"></span>
                </div>

                <!-- Téléphone -->
                <div>
                    <label asp-for="Telephone" class="block text-sm font-medium text-gray-700">Téléphone</label>
                    <input asp-for="Telephone" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" />
                    <span asp-validation-for="Telephone" class="text-red-500 text-sm"></span>
                </div>

                <!-- Adresse -->
                <div>
                    <label asp-for="Adresse" class="block text-sm font-medium text-gray-700">Adresse</label>
                    <input asp-for="Adresse" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" />
                    <span asp-validation-for="Adresse" class="text-red-500 text-sm"></span>
                </div>

                <!-- Utilisateur -->
                <div>
                    <label asp-for="UserId" class="block text-sm font-medium text-gray-700">Utilisateur</label>
                    <select asp-for="UserId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" asp-items="ViewBag.UserId"></select>
                    <span asp-validation-for="UserId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Boutons -->
                <div class="flex items-center justify-between">
                    <a asp-action="Index" class="text-sm text-blue-500 hover:underline">Retour à la liste</a>
                    <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
